<h1>Actualizar Producto</h1>
<form action="/productos/<%= producto.id %>/update?_method=PUT" method="POST">
    <p class="p_form">
        <label for="id">ID:</label>
    </p>
    <input type="text" id="id" name="id" value="<%= producto.id %>" readonly />
    <p class="p_form">
        <label for="nombre">Nombre:</label>
    </p>
    <input type="text" id="nombre" name="nombre" value="<%= producto.title %>" required />
    <p class="p_form">
    <p class="p_form">
    <label for="categoria">Categoría:</label>
  </p>
  <select id="categoria" name="categoria" required>
    <option value=""></option>
    <% categorias.forEach(function(categoria) { %>
      <option value="<%= categoria.id %>"
        <%= categoria.title == producto.categoria ? 'selected' : '' %>
        ><%= categoria.title %></option>
    <% }); %>
  </select>  
        <label for="descripcion">Descripción:</label>
    </p>
    <textarea id="descripcion" name="descripcion" required>
<%= producto.description %></textarea>
    <br>
    <br>
    <input type="submit" value="Actualizar Producto" />
</form>
<br>
<div align="center">
    <button onclick="location.href='/productos'">Volver a Productos</button>
</div>