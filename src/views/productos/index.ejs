<h1>Listado de Productos</h1>
<table border="1" 
        cellpadding="5" 
        cellspacing="0" 
        width="50%" 
        style="border-collapse: collapse;" 
        align="center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>  
            <th>Descripción</th>
            <th>Categoría</th>          
        </tr>
    </thead>
    <tbody align="center">
        <% productos.forEach(function(producto) { %>
            <tr>
                <td><%= producto.id %></td>
                <td><a href="/productos/<%= producto.id %>"><%= producto.title %></a></td> 
                <td><%= producto.description %></td>  
                <td><a href="/categorias/<%= producto.categoryID %>">
                    <%= categoriaMap[producto.categoryID] ? categoriaMap[producto.categoryID].title : "Sin categoría" %>
                </a></td>             
            </tr>
        <% }); %>
    </tbody>
</table>
<br>
<div align="center">
    <a href="productos/create">
        <button>Crear Nuevo Producto</button>        
    </a>
